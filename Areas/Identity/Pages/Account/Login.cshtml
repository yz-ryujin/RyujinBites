@page
@model LoginModel

@{
    // Não usar o layout principal para esta página, para ter controle total sobre o fundo e a estrutura
    Layout = null;
    ViewData["Title"] = "Login - RyujinBites"; // Título da página
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0xmV4pBLtF8k4A4qS4mC4h5/j/3u+g/6a8i2G3C0G5T5M3eE0F0P5S2xQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body class="login-page-body">
    <video autoplay muted loop playsinline id="login-bg-video">
        <source src="~/videos/ryujin-background.mp4" type="video/mp4">
        Seu navegador não suporta vídeos HTML5. 
    </video>
    <div class="video-overlay"></div>
     
    <div class="login-container">
        <div class="login-card">
            <div class="text-center mb-4">
                <img src="https://via.placeholder.com/80x80?text=RyujinBites" alt="RyujinBites Logo" class="login-logo mb-3">
                <h2 class="login-title">Login</h2>
            </div>

            <p class="login-description text-muted text-center mb-4">
                Faça login para continuar seu pedido.
            </p>

            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>    

                <div class="form-group mb-3 login-input-group">
                    <label asp-for="Input.Email" class="form-label visually-hidden">Email</label>
                    <input asp-for="Input.Email" class="form-control login-input" autocomplete="username" aria-required="true" placeholder="Seu nome de usuário ou email">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3 login-input-group">
                    <label asp-for="Input.Password" class="form-label visually-hidden">Senha</label>
                    <input asp-for="Input.Password" class="form-control login-input" autocomplete="current-password" aria-required="true" placeholder="Sua senha">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="mb-3 text-end">
                    <a id="forgot-password" asp-page="./ForgotPassword" class="forgot-password-link">Esqueceu a senha?</a>
                </div>

                <div class="d-grid gap-2 mb-3">
                    <button id="login-submit" type="submit" class="btn btn-primary login-btn">Fazer Login</button>
                </div>
            </form>

            <div class="text-center mt-4">
                <p>
                    Não tem uma conta? <a asp-page="./Register" class="register-link">Registre-se aqui!</a>
                </p>
                <p class="mt-3">
                    <a href="#" class="terms-link">Termos de uso e Política de Privacidade</a>
                </p>
            </div>

            @if ((Model.ExternalLogins?.Count ?? 0) != 0)
            {
                <hr class="my-4">
                <p class="text-center">Ou faça login com:</p>
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                    <div>
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-secondary login-social-btn w-100 mb-2" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                <i class="fab fa-@provider.Name.ToLower() me-2"></i> @provider.DisplayName
                            </button>
                        }
                    </div>
                </form>
            }
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>