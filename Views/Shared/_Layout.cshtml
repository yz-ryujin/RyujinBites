<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RyujinBites</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RyujinBites.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0xmV4pBLtF8k4A4qS4mC4h5/j/3u+g/6a8i2G3C0G5T5M3eE0F0P5S2xQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <div class="bg-white border-right" id="sidebar-wrapper">
            <div class="sidebar-heading text-center py-4 primary-text fs-4 fw-bold text-uppercase border-bottom">
                RyujinBites
            </div>
            <div class="list-group list-group-flush my-3">
                <a href="/" class="list-group-item list-group-item-action bg-transparent second-text active">
                    <i class="fas fa-home me-2"></i>Home
                </a>
                <a href="/Categorias" class="list-group-item list-group-item-action bg-transparent second-text">
                    <i class="fas fa-list me-2"></i>Categorias
                </a>
                <a href="/Produtos" class="list-group-item list-group-item-action bg-transparent second-text">
                    <i class="fas fa-burger me-2"></i>Produtos
                </a>
                <a href="/Clientes" class="list-group-item list-group-item-action bg-transparent second-text">
                    <i class="fas fa-users me-2"></i>Clientes
                </a>
                <a href="/Administradores" class="list-group-item list-group-item-action bg-transparent second-text">
                    <i class="fas fa-user-shield me-2"></i>Administradores
                </a>
                <a href="/Cupons" class="list-group-item list-group-item-action bg-transparent second-text">
                    <i class="fas fa-tags me-2"></i>Cupons
                </a>
                <a href="/Pedidos/MeusPedidos" class="list-group-item list-group-item-action bg-transparent second-text">
                    <i class="fas fa-receipt me-2"></i>Meus Pedidos
                </a>
                <a href="/Pedidos/GerenciarPedidos" class="list-group-item list-group-item-action bg-transparent second-text">
                    <i class="fas fa-tasks me-2"></i>Gerenciar Pedidos
                </a>
                <a href="/Avaliacoes" class="list-group-item list-group-item-action bg-transparent second-text">
                    <i class="fas fa-star me-2"></i>Avaliações
                </a>
                <a href="/Pagamentos" class="list-group-item list-group-item-action bg-transparent second-text">
                    <i class="fas fa-money-check-alt me-2"></i>Pagamentos
                </a>
                @if (User.IsInRole("Administrador"))
                {
                    <a href="/Avaliacoes/Denuncias" class="list-group-item list-group-item-action bg-transparent second-text">
                        <i class="fas fa-flag me-2"></i>Avaliações Denunciadas
                    </a>
                }
                <a href="/Identity/Account/Logout" class="list-group-item list-group-item-action bg-transparent text-danger fw-bold">
                    <i class="fas fa-power-off me-2"></i>Logout
                </a>
                <a href="/Home/Privacy" class="list-group-item list-group-item-action bg-transparent second-text">
                    <i class="fas fa-info-circle me-2"></i>Privacidade
                </a>
            </div>
        </div>
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-transparent py-4 px-4">
                <div class="d-flex align-items-center">
                    <i class="fas fa-align-left primary-text fs-4 me-3" id="menu-toggle"></i>
                    <h2 class="fs-2 m-0">@ViewData["Title"]</h2>
                </div>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <partial name="_LoginPartial" />
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="container-fluid px-4">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        var el = document.getElementById("wrapper");
        var toggleButton = document.getElementById("menu-toggle");

        toggleButton.onclick = function () {
            el.classList.toggle("toggled");
        };
    </script>
</body>
</html>