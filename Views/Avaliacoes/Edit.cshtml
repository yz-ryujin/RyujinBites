@model RyujinBites.Models.Lanchonete.Avaliacao

@{
    ViewData["Title"] = "Editar Avaliação"; // Título em português
}

@using Microsoft.AspNetCore.Identity
@using RyujinBites.Models.Identity
@inject UserManager<ApplicationUser> UserManager

<h1>Editar Avaliação</h1>

<h4>Avaliação de Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AvaliacaoId" />

            <div class="form-group" style="display: none;">
                <label class="control-label">Produto Avaliado</label>
                <p class="form-control-plaintext">@Model.Produto?.Nome</p>
                <input type="hidden" asp-for="ProdutoId" />
            </div>

            <div class="form-group" style="display: none;">
                <label class="control-label">Avaliado por</label>
                <p class="form-control-plaintext">
                    @Model.Cliente?.ApplicationUser?.Nome
                    (@Model.Cliente?.ApplicationUser?.Email)
                </p>
                <input type="hidden" asp-for="ClienteId" />
            </div>

            <div class="form-group" style="display: none;">
                <label class="control-label">Data da Avaliação</label>
                <p class="form-control-plaintext">@Model.DataAvaliacao.ToString("dd/MM/yyyy HH:mm")</p>
                <input type="hidden" asp-for="DataAvaliacao" />
            </div>

            <div class="form-group">
                <label asp-for="Pontuacao" class="control-label"></label>
                <input asp-for="Pontuacao" class="form-control" type="number" min="1" max="5" />
                <span asp-validation-for="Pontuacao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Comentario" class="control-label"></label>
                <textarea asp-for="Comentario" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Comentario" class="text-danger"></span>
            </div>

            @if (User.IsInRole("Administrador"))
            {
                <div class="form-group form-check">
                    <input class="form-check-input" asp-for="IsReported" />
                    <label class="form-check-label" asp-for="IsReported">
                        @Html.DisplayNameFor(model => model.IsReported) (Denunciado)
                    </label>
                </div>
            }
            else
            {
                @if (Model.IsReported)
                {
                    <div class="form-group">
                        <label class="control-label">Status</label>
                        <p class="form-control-plaintext">Denunciado</p>
                    </div>
                }
            }

            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}